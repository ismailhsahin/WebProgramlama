@using WebSonHal.Models
@model List<Yorum>
@{
    ViewData["Title"] = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YorumListesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
    { 
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td>@item.Email</td>
            <td>@item.YorumIcerik</td>
            <td>@item.YaziId</td>
            <td><a href="/Admin/YorumSil/@item.Id" class=" btn btn-danger">Sil</a></td>
            <td><a href="/Admin/YorumDuzenle/@item.Id" class=" btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>

